@model IEnumerable<OnlineMovie.DM.movie>

@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Movie
        <a href="../Admin/MovieAdd" class="btn btn-info pull-right fa fa-plus">Add New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Movie Name</th>
                        <th>Action</th>             

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Movie Name</th>
                        <th>Action</th>                        
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        int count = 1;
                    <tr>
                        <td>@count</td>
                        <td>@item.MovieName</td>
                        <td>
                            @Html.ActionLink("Edit", "MovieEdit", new { movieId = item.MovieId })
                        </td>
                        
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
