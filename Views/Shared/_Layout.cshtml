<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/MyMainLayout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col=xs-6">
                <div class="logo">
                    <h1><a href="#">Online <span>Movie Ticket</span></a></h1>
                    <p>My Movie</p>
                </div>
            </div>

            <div class="col-md-6 col-sm-6 col=xs-6">
                <div class="account">
                    <div class="col-md-12">
                        <div class="nav-menus">
                            <ul class="nav nav-pills">
                                <li class="active"><a style="border-radius: initial;" href="../Home/index">Home</a></li>
                                <li class="active"><a style="border-radius: initial;" href="https://maps.google.com/?cid=6575976363994006688&entry=gps">Location</a></li>
                                <li class="active"><a style="border-radius: initial;" href="#">About</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-12 copyright">
                    <div class="col-md-6 col-sm-6 copyright-left">
                        <p>&copy; @DateTime.Now.Year - OnlineMovieTicket</p>
                    </div>

                    <div class="col-md-6 col-sm-6 copyright-right">
                        <ul class="list-unstyled list-social">
                            <li><a href=https://www.facebook.com/475162662969359/posts/1139969423155343/" target="_blank"><i class="fa fa-facebook-square"></i></a></li>
                            <li><a href="" target="_blank"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="https://instagram.com/gast_entertainmentmall?utm_medium=copy_link" target="_blank"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
